---
// 1. Define the Prop interface: tells Astro that this component expects a 'title' string.
interface Props {
  title: string;
}

// 2. Extract the 'title' variable from the props being passed from the page.
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
  		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}

    /* Target the body to be the centering container */
    body {
        display: flex; /* Make it a flexible container */
        flex-direction: column; /* Stack items vertically */
        align-items: center; /* Center children (your <main> content) horizontally */
        min-height: 100vh; /* Ensure the body takes up the full viewport height */
    }
</style>
