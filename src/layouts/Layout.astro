---
// 1. Define the Prop interface: tells Astro that this component expects a 'title' string.
interface Props {
  title: string;
}

// 2. Extract the 'title' variable from the props being passed from the page.
const { title } = Astro.props;

import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
  		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

